{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.stacspec.org/extensions/card4l/commons.json#",
  "title": "CARD4L Commons",
  "description": "STAC CARD4L Extension commonly used schemas for SAR and Optical",
  "type": "object",
  "required": [
    "properties",
    "links"
  ],
  "properties": {
    "properties": {
      "type": "object",
      "required": [
        "card4l:specification",
        "card4l:specification_version"
      ],
      "properties": {
        "card4l:specification": {
          "type": "string"
        },
        "card4l:specification_version": {
          "type": "string"
        },
        "card4l:northern_geometric_accuracy": {
          "type": "number",
          "minimum": 0
        },
        "card4l:eastern_geometric_accuracy": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "href",
          "rel"
        ]
      },
      "contains": {
        "required": [
          "type"
        ],
        "properties": {
          "rel": {
            "const": "card4l-document"
          },
          "type": {
            "enum": [
              "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
              "application/pdf"
            ]
          }
        }
      }
    }
  }
}