{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stac-extensions.github.io/card4l/v1.0.0/optical/schema.json#",
  "title": "CARD4L Optical Extension",
  "description": "STAC CARD4L Optical Extension for STAC Items.",
  "allOf": [
    {
      "type": "object",
      "required": [
        "stac_extensions",
        "geometry",
        "bbox",
        "type",
        "properties",
        "links",
        "assets"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "allOf": [
            {
              "contains": {
                "const": "https://stac-extensions.github.io/card4l/v1.0.0/optical/schema.json"
              }
            },
            {
              "contains": {
                "const": "eo"
              }
            },
            {
              "contains": {
                "const": "https://stac-extensions.github.io/file/v1.0.0/schema.json"
              }
            },
            {
              "contains": {
                "const": "projection"
              }
            },
            {
              "contains": {
                "enum": [
                  "view",
                  "https://schemas.stacspec.org/v1.0.0-rc.1/extensions/view/json-schema/schema.json"
                ]
              }
            }
          ]
        },
        "type": {
          "const": "Feature"
        },
        "properties": {
          "required": [
            "datetime",
            "instruments",
            "proj:epsg",
            "view:incidence_angle",
            "view:azimuth",
            "view:sun_azimuth",
            "view:sun_elevation"
          ],
          "oneOf": [
            {
              "properties": {
                "proj:epsg": {
                  "type": "integer"
                }
              }
            },
            {
              "properties": {
                "proj:epsg": {
                  "type": "null"
                }
              },
              "anyOf": [
                {
                  "required": [
                    "proj:wkt2"
                  ]
                },
                {
                  "required": [
                    "proj:projjson"
                  ]
                }
              ]
            }
          ]
        },
        "links": {
          "contains": {
            "properties": {
              "rel": {
                "const": "related"
              }
            }
          }
        },
        "assets": {
          "type": "object",
          "additionalProperties": {
            "allOf": [
              {
                "$comment": "TODO"
              }
            ]
          }
        }
      }
    },
    {
      "$ref": "../../commons.json"
    }
  ],
  "oneOf": [
    {
      "$comment": "SR-only requirements",
      "type": "object",
      "properties": {
        "properties": {
          "type": "object",
          "required": [

          ],
          "properties": {
            "card4l:specification": {
              "const": "SR"
            },
            "card4l:specification_version": {
              "const": "5.0"
            }
          }
        },
        "links": {
          "allOf": [
            {
              "contains": {
                "properties": {
                  "rel": {
                    "const": "atmospheric-scattering"
                  }
                }
              }
            },
            {
              "contains": {
                "properties": {
                  "rel": {
                    "const": "water-vapor"
                  }
                }
              }
            }
          ]
        }
      }
    },
    {
      "$comment": "ST-only requirements",
      "type": "object",
      "properties": {
        "properties": {
          "type": "object",
          "required": [

          ],
          "properties": {
            "card4l:specification": {
              "const": "ST"
            },
            "card4l:specification_version": {
              "const": "5.0"
            }
          }
        },
        "links": {
          "contains": {
            "properties": {
              "rel": {
                "const": "atmosphere-emissivity"
              }
            }
          }
        }
      }
    }
  ]
}